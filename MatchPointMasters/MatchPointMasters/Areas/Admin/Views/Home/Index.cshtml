@{
    ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-6 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> clubs, tournaments also hosts.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users, players, hosts</b>, <b>all clubs and tournaments</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="Admin" asp-controller="Club" asp-action="Add"
       class="btn btn-primary btn-lg">Добави клуб</a>
    <a asp-area="Admin" asp-controller="Club" asp-action="All"
       class="btn btn-primary btn-lg">Тенис-клубове</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">Потребители</a>
</div>